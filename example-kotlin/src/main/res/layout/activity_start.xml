<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/button_kotlin_java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin Lib -> Java implement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        />

    <Button
        android:id="@+id/button_kotlin_kotlin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kotlin Lib -> Kotlin implement"
        app:layout_constraintStart_toStartOf="@id/button_kotlin_java"
        app:layout_constraintLeft_toLeftOf="@id/button_kotlin_java"
        app:layout_constraintEnd_toEndOf="@id/button_kotlin_java"
        app:layout_constraintRight_toRightOf="@id/button_kotlin_java"
        app:layout_constraintTop_toBottomOf="@id/button_kotlin_java"
        android:layout_marginTop="16dp"
        />


</android.support.constraint.ConstraintLayout>